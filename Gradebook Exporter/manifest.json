{
    "manifest_version": 3,
    "name": "Gradebook Export (Private)",
    "version": "1.0.0",
    "description": "Scrape Buzz gradebook/all and export progress JSON (private, no logins).",
    "host_permissions": ["https://epicschools.agilixbuzz.com/*"],
    "content_scripts": [
      {
        "matches": ["https://epicschools.agilixbuzz.com/student/gradebook/all*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }  